# To sumbmit dockerimages to the repository

gcloud auth login
gcloud config set project PROJECT_ID

gcloud auth configure-docker
docker tag gromacs-plumed:20224-3_2-9-3 gcr.io/PROJECT_ID/gromacs-plumed:20224-3_2-9-3
docker push gcr.io/PROJECT_ID/gromacs-plumed:20224-3_2-9-3



docker pull ghcr.io/openfreeenergy/openfe:1.7.0



# To pull the images

gcloud auth configure-docker
docker pull gcr.io/PROJECT_ID/IMAGE_NAME:TAG
docker pull gcr.io/my-project/gromacs-plumed:20224-3_2-9-3



# To safely stop a docker container

docker ps
docker stop <IMAGEID>
docker rmi -f <IMAGEID> 

